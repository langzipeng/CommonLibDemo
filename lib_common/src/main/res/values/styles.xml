<resources>

    <!--Loading Dialog-->
    <style name="Theme.Dialog.LoadingDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/base_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/base_transparent</item>
    </style>


    <!--******************************************默认主题************************************************-->

    <style name="QMUI.AppBaseTheme" parent="QMUI.Compat">

        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_dark_blue</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!--******************************************滑动关闭************************************************-->

    <style name="AppBaseTheme.Slide" parent="@style/QMUI.AppBaseTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
<!--        <item name="android:windowAnimationStyle">@style/Animation.Activity.Slide</item>-->

    </style>

    <style name="Animation.Activity.Slide" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_slide_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_out</item>
    </style>

    <!--************************************************启动页Theme************************************************-->
    <style name="AppBaseTheme.Splash" parent="QMUI.AppBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/bg_launcher_sky</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>
